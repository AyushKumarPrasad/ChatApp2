<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#404040"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <ImageView
        android:id="@+id/profile_visit_user_image"
        android:src="@drawable/defaultimage"
        android:layout_width="match_parent"
        android:layout_height="280dp" />

    <TextView
        android:id="@+id/profile_visit_username"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/profile_visit_user_image"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#f0f0f0"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Name" />

    <TextView
        android:id="@+id/profile_visit_user_status"
        android:layout_below="@+id/profile_visit_username"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#f0f0f0"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Status" />

    <Button
        android:id="@+id/profile_visit_send_req_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="90dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="Send Friend Request"
        android:textAlignment="center"
        android:textColor="#f0f0f0"
        android:textStyle="bold" />

    <Button
        android:id="@+id/profile_decline_friend_req_btn"
        android:textAlignment="center"
        android:background="@color/colorPrimaryDark"
        android:padding="5dp"
        android:textStyle="bold"
        android:textColor="#f0f0f0"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:gravity="center_vertical"
        android:text="Decline Friend Request" />

</RelativeLayout>